<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>To Do List</title>
  </head>
  <body>
    <h1>Add a new item to @Model.GetName()</h1>

    <form action="/categories/@Model.GetId()/items" method="post">
      <input id='categoryId' name='categoryId' type='hidden' value='@Model.GetId()'>
      <label for="itemDescription">Item Description</label>
      <input id="itemDescription" name="itemDescription" type="text">

      <label for="due">Due Date</label>
      <input id="due" name="due" type="date">

      @* <div class="form-group">
        <label for="due">Due date:</label>
        <input id="due" class="form-control" type="date">
      </div> *@

      <button type="submit">Add item</button>
    </form>

  </body>
</html>
