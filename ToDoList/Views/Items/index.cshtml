@using ToDoList.Models;

<h1>To Do List</h1>
<ul>

@if (Model.Count == 0)
{
  <p>You have no items in your to do list!</p>
}
@if (Model.Count !=0)
{
    <table>
      <tr>
        <th>ID</th>
        <th>Description</th>
        <th>Due Date</th>
      </tr>
      @foreach (var item in Model)
      {
      <tr>
         <td>@item.GetId()</td>
         <td>@item.GetDescription()</td>
         <td>@item.GetDueDate().ToString("MM/dd/yyyy")</td>
      </tr>
      }
    </table>
}
</ul>
<a href="/items/new">Add a new item.</a>
<form action="/items/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>
